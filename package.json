{
  "name": "@whatsapp-cloudapi/monorepo",
  "version": "0.9.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc --build",
    "lint": "eslint .",
    "test": "vitest run",
    "smoke": "yarn build && yarn lint && yarn test",
    "-- PRE-COMMIT HOOKS --": "",
    "localAfterInstall": "husky || true",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.0.3",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "pinst": "^3.0.0",
    "prettier": "^3.6.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,mjs}": "eslint --cache",
    "*": "prettier --ignore-unknown --write"
  },
  "packageManager": "yarn@4.9.1"
}
